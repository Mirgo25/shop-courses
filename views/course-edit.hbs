<h1>Edit course</h1>

{{#if editError}}
    <p class="alert">{{editError}}</p>
{{/if}}

<form action="/courses/edit" method="POST" class="course-form" novalidate>
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Course Name</label>
        <span class="helper-text" data-error="Enter course name"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min="1" value="{{course.price}}">
        <label for="price">Course Price</label>
        <span class="helper-text" data-error="Enter course price"></span>
    </div>

    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required value="{{course.img}}">
        <label for="img">Image URL</label>
        <span class="helper-text" data-error="Enter url for image"></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">
    <input type="hidden" name="_csrf" value="{{ csrf }}">

    <button class="btn btn-primary" type="submit">Edit course</button>
</form>

<form action="/courses/remove" method="POST">
    <input type="hidden" name="id" value="{{course.id}}">
    <input type="hidden" name="_csrf" value="{{ csrf }}">
    
    <button class="btn red" type="submit">Delete course</button>
</form>