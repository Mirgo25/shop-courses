<h2>My orders</h2>

{{#if orders.length}}
    {{#each orders}}
       <div class="row">
        <div class="col s6 offset-s3">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">
                        Order <small>{{_id}}</small>
                    </span>
                    <p class="date">{{date}}</p>
                    <p><em>{{user.userID.name}}</em> ({{user.userID.email}})</p>

                    <ol>
                        {{#each courses}}
                            <li>
                                {{course.title}} (x<strong>{{count}}</strong>) 
                            </li>
                        {{/each}}
                    </ol>

                    <hr>

                    <p>Price: <span class="price">{{price}}</span></p>
                </div>
            </div>
        </div>
       </div> 
    {{/each}}
{{else}}
    <h1>No orders yet...</h1>
{{/if}}