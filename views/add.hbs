<h1>Add course</h1>

{{#if addError}}
    <p class="alert">{{addError}}</p>
{{/if}}

<form action="/add" method="POST" novalidate>
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required value="{{data.title}}">
        <label for="title">Course Name</label>
        <span class="helper-text" data-error="Enter course name"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min="1" value="{{data.price}}">
        <label for="price">Course Price</label>
        <span class="helper-text" data-error="Enter course price"></span>
    </div>

    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required value="{{data.img}}">
        <label for="img">Image URL</label>
        <span class="helper-text" data-error="Enter url for image"></span>
    </div>

    <input type="hidden" name="_csrf" value="{{ csrf }}">

    <button class="btn btn-primary" type="submit">Add course</button>
</form>